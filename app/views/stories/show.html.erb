<h3><%= @story.title %></h3>
<p><%= @story.first_entry %></p>
<ul>
<% @submissions.each do |submission| %>
  <li>
    <%= submission.body %>
    <%= button_to 'Delete Submission', "/stories/#{@story.id}/submissions/#{submission.id}", method: :delete, data: { confirm: 'Are you sure?'}, class: "button tiny alert radius"%><br>
  </li>
<% end %>
</ul>
<% if current_user %>
  <%= simple_form_for(@submission, url: "/stories/#{@story.id}/submissions/") do |f| %>

      <%= f.input :body, required: true, autofocus: true, as: :text, label: "Add your submission below:", input_html: { rows: 10 } %>

      <%= f.button :submit, "Submit" %>
  <% end %>
  <% if current_user.admin? || current_user.id == @story.user_id %>
    <%= button_to 'Delete Story', @story, method: :delete, data: { confirm: 'Are you sure?'}, class: "button tiny alert radius"%><br>
  <% end %>
<% else %>
  <%= link_to "Log in to add to this story!", login_path %>
<% end %>
