<h3><%= @story.title %></h3>
<%= render template: "votes/show", locals: { story: @story} %>
<p><%= @story.first_entry %></p>
<% @submissions.each do |submission| %>
  <div style="width:333px">
    <div style="float:right">
      <%= submission.body %>
      <%= render "submissionvotes", locals: { submission: submission } %>
      <%= button_to 'Delete Submission', story_submission_path(@story, submission), method: :delete, data: { confirm: 'Are you sure?'}, class: "button tiny alert radius"%><br>
    </div>
    <div style="float:left">
    up
    </div>
  </div>
<% end %>
<% if current_user %>
  <%= simple_form_for([@story, @submission]) do |f| %>

      <%= f.input :body, required: true, autofocus: true, as: :text, label: "Add your submission below:", input_html: { rows: 10 } %>

      <%= f.button :submit, "Submit" %>
  <% end %>
  <% if current_user.admin? || current_user.id == @story.user_id %>
    <%= button_to 'Delete Story', @story, method: :delete, data: { confirm: 'Are you sure?'}, class: "button tiny alert radius"%><br>
  <% end %>
<% else %>
  <%= link_to "Log in to add to this story!", login_path %>
<% end %>
